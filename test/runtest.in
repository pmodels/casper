#!/bin/bash

path=$(pwd)

if [ "x$MPIEXEC" = "x" ]; then
    echo "MPIEXEC is undefined"
    exit
fi

for f in `cat ./testlist`;do
    np=4
    nh=1
    export CSP_NG=$nh
    echo "testing $f -np $np -nh $nh ..."
    exec 5>&1
    output=$($MPIEXEC -np $np $path/$f | tee /dev/fd/5 )
    rs="$(echo $output | grep "0 errors"  --count)"
    if [ $rs != 1 ];then
        echo "test failed !"
        echo "$MPIEXEC -np $np $path/$f"
        exit
    fi

    np=8
    nh=1
    export CSP_NG=$nh
    echo "testing $f -np $np -nh $nh ..."
    exec 5>&1
    output=$($MPIEXEC -np $np $path/$f | tee /dev/fd/5 )
    rs="$(echo $output | grep "0 errors"  --count)"
    if [ $rs != 1 ];then
        echo "test failed !"
        echo "$MPIEXEC -np $np $path/$f"
        exit
    fi

    np=8
    nh=2
    export CSP_NG=$nh
    echo "testing $f -np $np -nh $nh ..."
    exec 5>&1
    output=$($MPIEXEC -np $np $path/$f | tee /dev/fd/5 )
    rs="$(echo $output | grep "0 errors"  --count)"
    if [ $rs != 1 ];then
        echo "test failed !"
        echo "$MPIEXEC -np $np $path/$f"
        exit
    fi

    np=10
    nh=2
    export CSP_NG=$nh
    echo "testing $f -np $np -nh $nh ..."
    exec 5>&1
    output=$($MPIEXEC -np $np $path/$f | tee /dev/fd/5 )
    rs="$(echo $output | grep "0 errors"  --count)"
    if [ $rs != 1 ];then
        echo "test failed !"
        echo "$MPIEXEC -np $np $path/$f"
        exit
    fi
    echo ""
done
echo "all passed"
